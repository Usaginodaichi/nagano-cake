<div class="container">
  <div class="row">
    <h2>注文履歴一覧</h2>
    <table class="table">
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= "〒" %><%= order.postal_code %>&emsp;
          <%= order.address %>
          <%= order.name %></td>
          <td>
           <%= order.order_details.all.each do |order_detail| %>
             <p><%= order_detail.item.name %></p>
           <% end %>
          </td>
          <td><%= order.total_payment %>円</td>
          <td><%= order.status %></td>
          <td><%= link_to"表示する", public_order_path(order.id), class:"btn btn-sm" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>