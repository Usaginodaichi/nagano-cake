<div class="container">
  <div class="row">
  <%= form_with model: @order, url: new_public_order_path do |f| %>
    <h3>支払方法</h3>
    <%= f.radio_button:payment_method,Order.payment_methods.key(0) %>
    <%= f.label:payment_method,Order.payment_methods_i18n[:credit_card] %>

    <%= f.radio_button:payment_method,Order.payment_methods.key(1) %>
    <%= f.label:payment_method,Order.payment_methods_i18n[:transfer] %>

    <h3>お届け先</h3>
    <%= f.radio_button:select_address, 'radio1' %>
    <%= f.label:select_address, 'ご自身の住所', value: 1 %>
    <%= "〒" %>
    <%= current_customer.postal_code %>
    <%= current_customer.address %>

    <%= f.radio_button:select_address, 'radio2'  %>
    <%= f.select:select_address, options_from_collection_for_select(Address.all, :id, :address_display) %>
    </div>
  <% end %>
</div>
