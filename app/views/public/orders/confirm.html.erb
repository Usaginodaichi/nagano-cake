<div class="container">
  <h2>注文情報確認</h2>
  <div class="row">
    <div class="col-auto">
      <div class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>

        <tbody>
          <%= @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.get_image(100,100) %>
            <%= cart_item.item.name %></td>
            <td><%= cart_item.item.with.tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
            <% @total += cart_item.subtotal %>
          </tr>
          <% end %>
        </tbody>

        <div class='form-group'>
          <label for="labelpaymentmethod">支払方法</label>
          <%= @order.payment_method %>
          <label for="labeladdress">お届け先</label>
          <%= @order.address %>
        </div>
      </div>
    </div>

    <div class="col-auto">
      <table>
        <tbody>
          <tr>
            <td>送料</td>
            <td><%= @order.shipping_cost %></td>
          </tr>

          <tr>
            <td>商品合計</td>
            <td><%= @total %></td>
            <td><%= @total + @order.shipping_cost %></td>
          </tr>

        </tbody>
      </table>
    </div>
  </div>
</div>
