<div class="container">
  <%= form_with model: @cart_item, url:public_cart_items_path do |f| %>
  <div class"row">
    <div class="col-md-5">
      <%= image_tag @item.get_image(300,300) %>
    </div>
    <div class="col-md-7">
      <%= @item.name %>
      <%= @item.introduction %>
      <%= "¥" %>
      <%= @item.price %>
      <%= f.hidden_field :item_id, :value => @item.id  %>
      <%= f.select :amount,*[1..10] %>
      <%= f.submit"カートに入れる", class:'btn btn-success'; %>
    </div>
  </div>
  <% end %>
</div>