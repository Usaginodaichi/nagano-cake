  <div class"row">
    <div class="col-auto">
      <%= image_tag @item.get_image(500,500) %>
    </div>
    <div class="col-auto">
      <%= @item.name %>
      <%= @item.introduction %>
      <%= @item.price %>
      <%= form_with model: @cart_item, url:public_cart_items_path do |f| %>
      <%= f.hidden_field :cart_item, :value => "amount" %>
      <%= f.select :amount,*[1..10] %>
      <%= f.submit"カートに入れる" %>
      <% end %>

