<div class="container">
  <div class="row">
    <h2>商品一覧</h2>
    <%= @items.each do |item| %>
    <div class="col-md-4">
      <%= link_to public_item_path(item.id) do %>
       <%= image_tag item.get_image(500,500) %>
      <% end %>
      <%= item.name %>
      <%= item.price %>
    <% end %>
    </div>
  </div>
</div>
