<div class="container">
  <div class="row">
    <div class="col-auto">
      <h2>商品一覧(全
      <%= @items.count %>
      件)</h2>
      <% @items.each do |item| %>
      <div class="items-box">
        <table class="table">
          <tr>
            <th><%= link_to public_item_path(item.id) do %>
            <%= image_tag item.get_image(200,200) %>
            <% end %></th>
            <td>
              <%= item.name %>
            </td>
            <td>
              <%= "¥" %>
              <%= item.price %>
            </td>
          </tr>
        </table>
      </div>
      <% end %>
      <%= paginate @items %>
    </div>
  </div>
</div>
