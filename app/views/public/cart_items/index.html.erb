<div class="container">
  <div class="row">
    <h2>ショッピングカート</h2>
  </div>

  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= @cart_items.each do |cart_item| %>
        <tr>
          <td><%= image_tag cart_item.item.get_image(100,100) %>
          <%= cart_item.name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal %></td>
          <td><%= link_to"削除する",public_cart_items_path(cart_item.id), method: :destroy, "data-confirm" => "本当に削除しますか?", class:"btn btn-sm btn-danger" %></td>
        </tr>
      </tbody>
    </table>
  <div class="row">
    <div class="col">
      <%= link_to"買い物を続ける", public_items_path %>
    </div>
    <div class="col">
      <%= "合計金額" %>
      <% @total += cart_item.subtotal %>
      <!--カート内のそれぞれの商品の個数と金額を掛け合わせて、各々の商品の合計金額の計算式を算出し表示-->
    </div>
  </div>
  </div>
</div>
