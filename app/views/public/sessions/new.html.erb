<div class="container">
  <h2 class="px-3 mx-auto">
    <strong>ログイン</strong>
  </h2>

  <div class="row">
    <h5>会員の方はこちらからログイン</h5>
  </div>
    <%= form_with model: @customer, url:customer_session_path do |f| %>
    <div class="form-group">
      <table class="table table-borderless ">
        <tbody>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tbody>
        <tbody>
          <th>パスワード</th>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tbody>
      </table>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    </div>
    <% end %>

  <div class="row">
    <h5>会員登録がお済みでない方</h5>
  </div>
  <div class="row">
    <%= link_to "こちら", new_customer_registration_path %>
    <%= "から新規登録を行ってください" %>
  </div>
</div>

