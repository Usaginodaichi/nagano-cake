<div class="container">
    <div class="row">
        <h2>マイページ</h2>
    </div>
    <div class="row">
        <%= "登録情報" %>
        <%= link_to"編集する", public_customers_information_edit_path(@customer)  %>
    </div>
    <div class="row">
        <table class="table">
            <colgroup>
                <col width="25%">
                <col width="75%">
            </colgroup>

            <tbody>
                <tr>
                    <th>名前</th>
                    <td><%= @customer.last_name %>
                    <%= @customer.first_name %></td>
                </tr>
                <tr>
                    <th>カナ</th>
                    <td><%= @customer.first_name_kana %>
                    <%= @customer.last_name_kana %></td>
                </tr>
                <tr>
                    <th>郵便番号</th>
                    <td><%= @customer.postal_code %></td>
                </tr>
                <tr>
                    <th>住所</th>
                    <td><%= @customer.address %></td>
                </tr>
                <tr>
                    <th>電話番号</th>
                    <td><%= @customer.telephone_number %></td>
                </tr>
                <tr>
                    <th>メールアドレス</th>
                    <td><%= @customer.email %></td>
                </tr>
            </tbody>
        </table>
    </div>
