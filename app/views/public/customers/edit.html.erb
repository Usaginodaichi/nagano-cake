<div class="container">
    <h2>会員情報編集</h2>
    <div class="row">
    <%= form_with model: @customer, url:public_customers_information_path(@customer), method: :patch do |f| %>
    <div class="form-group">
      <label for="inputname">氏名</label>
      <%= f.text_field :last_name, autofocus:true, id:"inputname", placeholder:"姓" %>
      &nbsp;
      <%= f.text_field :first_name, autofocus:true, id:"inputname", placeholder:"名" %>
    </div>
    <div class="form-group">
      <label for="inputName_kana">フリガナ</label>
      <%= f.text_field :last_name_kana, autofocus:true, id:"inputName_kana", placeholder:"セイ" %>
      &nbsp;
      <%= f.text_field :first_name_kana, autofocus:true, id:"inputName_kana", placeholder:"メイ" %>
    </div>
    <div class="form-group">
      <label for="inputpostal_code">郵便番号</label>
      <%= f.text_field :postal_code, autofocus:true, id:"inputpostal_code", placeholder:"1112222" %>
    </div>
    <div class="form-group">
      <label for="inputaddress">住所</label>
      <%= f.text_field :address, autofocus:true, id:"inputaddress", placeholder:"住所" %>
    </div>
    <div class="form-group">
      <label for="inputtelephone_number">電話番号</label>
      <%= f.text_field :telephone_number, autofocus:true, id:"inputtelephone_number", placeholder:"08011112222" %>
    </div>
    <div class="form-group">
      <label for="inputemail">メールアドレス</label>
      <%= f.text_field :email, autofocus:true, id:"inputemail", placeholder:"hoge@example.com" %>
    </div>
     <div class="col-auto">
       <div class="form-group">
       <%= f.submit"編集内容を保存" %>
     </div>
     </div>
     <div class="col-auto">
       <div class="form-group">
         <%= link_to "退会する", public_customers_unsubscribe_path, class:'btn btn-danger'; %>
       </div>
     </div>
    <% end %>
  </div>
</div>
