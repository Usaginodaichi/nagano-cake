<div class="container">
  <h2 class="px-3 mx-auto">
    <strong>新規会員登録</strong>
  </h2>

  <div class="form-group">
    <%= form_with model: @customer, url:customer_registration_path, id:'new_customer', class:'new_customer' do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <div class="mb-3 row">
        <label for="inputName" class="col-auto col-form-label">名前</label>
        <div class="col-auto">
          <ul>(姓)
          <%= f.text_field :last_name, autofocus:true, id:"inputName", placeholder:"令和" %>
          </ul>
        </div>
        <div class="col-auto">
          <ul>(名)
          <%= f.text_field :first_name, autofocus:true, id:"inputName", placeholder:"道子" %>
          </ul>
        </div>
      </div>
    </div>
    <div class="field">
      <div class="mb-3 row">
        <label for="inputName_kana" class="col-auto col-form-label">フリガナ</label> <!--　カタカナ自動変換 -->
        <div class="col-auto">
          <h5>(セイ)</h5>
          <%= f.text_field :last_name_kana, autofocus:true, id:"inputName_kana", placeholder:"レイワ" %>
          </div>
          <div class="col-auto">
            <h6>(メイ)</h6>
            <%= f.text_field :first_name_kana, autofocus:true, id:"inputName_kana", placeholder:"ミチコ" %>
          </div>
      </div>

    <div class="field">
      <label for="inputemail">メールアドレス</label>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field">
      <label for="inputpostal_code">郵便番号(ハイフンなし)</label>　<!-- バリデーション数字7ケタまで -->
      <%= f.text_field :postal_code, autofocus:true, id:"inputpostal_code", placeholder:"0000000" %>
    </div>
    <div class="field">
      <label for="inputaddress">住所</label>
      <%= f.text_field :address, autofocus:true, id:"inputaddress", placeholder:"東京都渋谷区代々木神園町0-0" %>
    </div>
    <div class="field"> <!--電話番号10ケタまで　-->
      <label for="inputtelephone_number">電話番号(ハイフンなし)</label>
      <%= f.text_field :telephone_number, autofocus:true, id:"inputtelephone_number", placeholder:"00000000000" %>
    </div>
    <div class="field">
      <%= f.label :"パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    <div class="field">
      <%= f.label :"パスワード(確認用)" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="actions">
      <%= f.submit "新規登録"  %>
    </div>
    <% end %>
  </div>

  <h5>既に登録済みの方</h5>
  <div class="row">
    <%= link_to "こちら", new_customer_session_path %>
    <%= "からログインしてください" %>
  </div>
 </div>
</div>
