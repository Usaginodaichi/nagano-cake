<div class="container">
  <div class="row">
    <h2>商品詳細</h2>
  </div>

  <div class="row">
    <div class="col">
        <%= image_tag @item.get_image(500,500) %>
    </div>
    <div class="col">
      <div class="form-group">
        <h5>商品名</h5>
        <%= @item.name %>
      </div>
      <div class="form-group">
        <h5>商品説明</h5>
        <%= @item.introduction %>
      </div>
      <div class="form-group">
        <h5>ジャンル</h5>
        <%= @item.genre.name %>
      </div>
      <div class="form-group">
        <h5>税込価格(税抜価格)</h5>
        <%= @item.with_tax_price %><%= "円" %>
        <%= "(" %>
        <%= @item.price %>
        <%= "円" %>
        <%= ")" %>
      </div>
      <div class="form-group">
        <h5>販売ステータス</h5>
        <% if @item.is_active == true %>
         <%= "販売中" %>
        <% else %>
         <%= "販売停止中" %>
        <% end %>
      </div>
      <div class="form-group">
       <%= link_to'編集する', edit_admin_item_path(@item.id), class:'btn btn-info' %>
      </div>
    </div>
  </div>
</div>