<div class="container">
  <div class="row">
    <h2>商品詳細</h2>
  </div>

  <div class="row">
    <% @item.each do |item|%>
    <div class="col-auto">
      <%= image_tag item.image(100.100) %>
    </div>
    <div class="col-auto">
      <div class="form-group">
        <h5>商品名</h5>
        <%= item.name %>
      <div class="form-group">
        <h5>商品説明</h5>
        <%= item.introduction %>
      </div>
      </div>
    </div>
  </div>
</div>