<div class="container">
  <div class="row">
    <div class="col-auto">
      <h2>商品一覧</h2>
    </div>
    <div class="col-auto">
      <%= link_to new_admin_item_url, class:'col-auto' do %>
      <i class="fa fa-plus-circle"></i>
      <% end %>
    </div>
  </div>

  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, edit_admin_item_path(item.id) %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active %></td>
        </tr>
        <% end %>
        <%= paginate @items %>
      </tbody>
    </table>
  </div>
</div>