<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h3>商品新規登録</h2>
    <% if @item.errors.any? %>
     <%= @item.errors.count %>件のエラーが発生しました
     <ul>
      <% @item.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
    <% end %>

    <%= form_with model: @item, url:admin_items_url, method: :post do |f| %>
    <div class = "form-group">
       <label for="inputImage" class="form-group">商品画像</label>
       <%= f.file_field :image, placeholder:"商品画像", accept:'image/*' %>
    </div>
    <div class="form-group">
       <label for="inputName" class="form-group">商品名</label>
       <%= f.text_field :name, autofocus:true, id:"inputName", placeholder:"商品名" %>
    </div>
     <div class="form-group">
       <label for="inputIntroduction">商品説明</label>
        <%= f.text_area :introduction, autofocus:true, id:"inpuIntroduction", class:'form-control', size:"5x5", placeholder:"ここに説明文を記述します" %>
     </div>
     <div class="form-group">
       <label for="inputGenre_id">ジャンル</label>
        <%= f.collection_select :genre_id, Genre.all, :id, :name,  include_blank: "選択して下さい" %>
     </div>
     <div class="form-group">
       <label for="inputPrice">税抜価格</label>
       <%= f.text_field :price, autofocus:true, id:"inputPrice", placeholder:"1000" %>
     </div>
     <div class="form-group">
       <label for="inputIs_active">販売ステータス</label>
       <%= f.radio_button :is_active, :true %>
       <%= f.label :is_active, "販売中" %>
       <%= f.radio_button :is_active, :false  %>
       <%= f.label :is_active, "販売停止中" %>
     </div>
     <div class="form-group">
      <%= f.submit '新規登録' %>
     </div>
    <% end %>
    </div>
  </div>
</div>