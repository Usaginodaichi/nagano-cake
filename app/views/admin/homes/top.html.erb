<div class="container">
 <div class="row">
  <div class="col-md-8 offset-md-1">
   <h2>注文履歴一覧</h2>
    <table class="table">
     <thead>
       <tr>
         <th>購入日時</th>
         <th>購入者</th>
         <th>注文個数</th>
         <th>注文ステータス</th>
       </tr>
     </thead>

     <tbody>
       <% @orders.each do |order| %>
         <tr>
           <td>
            <%= order.remember_created_at %> <!--注文履歴詳細のリンクを貼る -->
           </td>
           <td>
            <%= order.name %>
           </td>
           <td>
            <!--数量　order_detailsから引っ張る-->
           </td>
           <td>
            <%= order.status %>
           </td>
         </tr>
       <% end %>
      </tbody>
    </table>
  </div>
 </div>
</div>