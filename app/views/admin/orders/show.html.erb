<div class="container">
  <div class="row">
    <h2>注文履歴詳細</h2>
    <div class="form-group">
      <h5>購入者</h5>
      <%= @order.name %>
    </div>
    <div class="form-group">
      <h5>注文日</h5>
      <%= @order.created_at.strftime("%Y-%m-%d") %>
    </div>
    <div class="form-group">
      <h5>配送先</h5>
      <%= @order.postal_code %>&nbsp;
      <%= @order.address %>&nbsp;
      <%= @order.name %>
    </div>
    <div class="form-group">
      <h5>支払方法</h5>
      <%= @order.payment_method_i18n %>
    </div>
    <div class="form-group">
      <h5>注文ステータス</h5>
       <%= form_with model: @order, url:admin_order_path(@order), method: :patch do |f| %>
       <%= f.select :status, [['入金待ち', 'waiting'],['入金確認', 'confirmation'],['制作中', 'production'],['発送準備中','shipping_preparation'],['発送済み','sent']] %>
       <%= f.submit "更新", class:"btn btn-success" %>
       <% end %>
    </div>
  </div>
<!--下記コードは仮コード、orderdetailsとの関連性を再試行する必要あり-->
  <div class="row">
    <div class="col-auto">
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @order_detail.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal %></td>
            <td><%= form_with model: order_detail, url:admin_order_detail_path(order_detail), method: :patch do |f| %>
             <%= f.select :making_status, [['制作不可', 'production_not_allowed'],['制作待ち', 'waiting'],['制作中', 'production'],['制作完了','completed']] %>
             <%= f.submit "更新", class:"btn btn-success" %>
             <% end %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-auto">
      <div class="form-group">
        <h5>商品合計</h5>
        <%= @order.total_payment %>
      </div>
      <div class="form-group">
        <h5>送料</h5>
        <%= @order.shipping_cost %>
      </div>
      <div class="form-group">
        <h5>請求額合計</h5>
        <%= @order.sum_of_order_price %>
      </div>
    </div>
  </div>
</div>
