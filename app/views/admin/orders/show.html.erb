<div class="container">
  <div class="row">
    <h2>注文履歴詳細</h2>
    <div class="form-group">
      <h5>購入者</h5>
      <%= @order.customer.name %>
    </div>
    <div class="form-group">
      <h5>注文日</h5>
      <%= @order.created_at %>
    </div>
    <div class="form-group">
      <h5>配送先</h5>
      <%= @order.postal_code %>&nbsp;
      <%= @order.address %>&nbsp;
      <%= @order.name %>
    </div>
    <div class="form-group">
      <h5>支払方法</h5>
      <!--enum未実装%= @order.payment_method %>-->
    </div>
    <div class="form-group">
      <h5>注文ステータス</h5>
      <!--enum未実装%= @order.status %>-->
    </div>
  </div>
<!--下記コードは仮コード、orderdetailsとの関連性を再試行する必要あり-->
  <div class="row">
    <div class="col-auto">
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>

        <tbody>
          <%= @order.each do |order| %>
          <tr>
            <td><%= order.order_detail.item_id.name %></td>
            <td><%= order.order_detail.price %></td>
            <td><$= order.order_detail.amount</td>
            <td><%= order.order_detail.subtotal %></td>
            <td><%= order.order_detail.making_status %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-auto">
      <div class="form-group">
        <h5>商品合計</h5>
        <%= @order.total_payment %>
      </div>
      <div class="form-group">
        <h5>送料</h5>
        <%= @order.shipping_cost %>
      </div>
      <div class="form-group">
        <h5>請求額合計</h5>
        <%= @order.sum_of_order_price %>
      </div>
    </div>
  </div>
</div>
