<div class="container">
  <div class="row">
    <h2><%= @customer.last_name %>
    <%= @customer.first_name %>さんの会員詳細</h2>

    <div class="form-group">
      <h5>会員ID</h5>
      <%= @customer.id %>
    </div>
    <div class="form-group">
      <h5>氏名</h5>
      <%= @customer.last_name %>&nbsp;<%= @customer.first_name %>
    </div>
    <div class="form-group">
      <h5>フリガナ</h5>
      <%= @customer.last_name_kana %>&nbsp;<%= @customer.first_name_kana %>
    </div>
    <div class="form-group">
      <h5>郵便番号</h5>
      <%= @customer.postal_code %>
    </div>
    <div class="form-group">
      <h5>住所</h5>
      <%= @customer.address %>
    </div>
    <div class="form-group">
      <h5>電話番号</h5>
      <%= @customer.telephone_number %>
    </div>
    <div class="form-group">
      <h5>メールアドレス</h5>
      <%= @customer.email %>
    </div>
    <!--<div class="form-group">-->
    <!--  <h5>会員ステータス</h5>-->
    <!--  %= @customer.is_deleted %>-->
    <!--</div>-->
