<div class="container">
  <div class="row mt-5">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-md-5">
     <h3>ジャンル一覧・追加</h2>
     <%= form_with model:@genre, url:admin_genres_path do |f| %>
     <label for="inputGenre" class="form-group">ジャンル名</label>
      <%= f.text_field :name, class:"form_control name", placeholder:"ジャンル名" %>
      <%= f.submit'新規登録', class:"btn btn-success" %>
     <% end %>
     </div>
  </div>

  <div class="row mt-5">
   <table class="table table-hover">
    <thead>
     <tr>
      <th>ジャンル</th>
      <th colspan="2"></th>
     </tr>
    </thead>

    <tbody>
     <% @genres.each do |genre| %>
     <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:'btn btn-success' %></td>
     </tr>
    </tbody>
   <% end %>
   </table>
  </div>
</div>