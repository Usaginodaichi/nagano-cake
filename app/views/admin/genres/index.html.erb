<!--<h1>Admin::Genres#index</h1>-->
<div class="container">
  <div class="row">
    <div class="col-auto">
     <h3>ジャンル一覧・追加</h2>
    </div>
  </div>
    <div class="row">
     <div class="col-auto">
      <label>ジャンル名</label>
     </div>
     <div class="col-auto">
     <%= form_with model:@genre, url:admin_genres_path do |f| %>
      <%= f.text_field :name, class:"form_control name", placeholder:"ジャンル名" %>
      <%= f.submit'新規登録', class:"btn btn-success" %>
     <% end %>
     </div>
    </div>

  <div class="row mx-auto">
   <table class="table table-hover">
    <thead>
     <tr>
      <th>ジャンル</th>
      <th colspan="2"></th>
     </tr>
    </thead>

    <tbody>
     <% @genres.each do |genre| %>
     <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:'btn btn-success' %></td>
     </tr>
    </tbody>
   <% end %>
   </table>
  </div>
</div>