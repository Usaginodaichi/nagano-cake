<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>NaganoCake</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="callapse" data-target="#navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

              <% if admin_signed_in? %>
              <li>
                <%= link_to admin_items_path, class:'nav-link text-light' do %>
                 <i class="fas fa-home"></i>
                  商品一覧
                <% end %>
              </li>

              <li>
                <%= link_to admin_customers_path, class:'nav-link text-light' do %>
                 <i class="fas fa-users"></i>
                 会員一覧
                <% end %>
              </li>

              <li>
                <%= link_to admin_order_path, class:'nav-link text-light' do %>
                 <i class="fas fa-book-open"></i>
                 注文履歴一覧
                <% end %>
              </li>

              <li>
                <%= link_to destroy_admin_session_path, class:'nav-link text-light', method: :delete do %>
                 <i class="fas fa-sign-out-alt"></i>
                 ログアウト
                <% end %>
              </li>

              <% elsif customer_signed_in? %>
              <li>
                <%= link_to public_customers_my_page_path,class:'nav-link text-light' do %>
                <i class="fas fa-sign-in-alt"></i>
                マイページ
                <% end %>
              </li>
              <!--商品一覧のリンク未設定-->
              <!--カート機能のリンク未設定-->
              <li>
                <%= link_to destroy_customer_session_path, class:'nav-link text-light', method: :delete do %>
                <i class="fas fa-sign-in-alt"></i>
                ログアウト
                <% end %>
              </li>

              <% else %>
              <li>
                <%= link_to about_path, class:'nav-link text-light' do %>
                 <i class="fas fa-home"></i>
                  About
                <% end %>
              </li>

              <!--<li>-->
              <!--  %= link_to , class:'nav-link text-light' do %>-->
              <!--   <i class="fas fa-link"></i>-->
              <!--   商品一覧-->
              <!--  % end %>-->
              <!--</li>-->
              <li>
               <%= link_to new_customer_registration_path, class:'nav-link text-light' do  %>
                <i class="fas fa-user-plus"></i>
                新規登録
               <% end %>
              </li>
              <li>
               <%= link_to new_customer_session_path, class:'nav-link text-light' do  %>
                <i class="fas fa-sign-in-alt"></i>
                ログイン
               <% end %>
              </li>
              <% end %>
              </li>
            </ul>
          </div>
        </div>
      </nav>

    </header>

    <main>
    <p class="notice"><%= notice %></p>

    <%= yield %>
  </body>
</html>
