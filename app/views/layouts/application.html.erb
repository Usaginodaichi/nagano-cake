<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light bg-orange">
        <div class="container bg-warning">
          <a class="navbar-brand" href="/">
            <span>NaganoCake</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="callapse" data-target="#navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

              <% if admin_signed_in? %>
              <li>
                <%= link_to admin_items_path, class:'nav-link text-dark' do %>
                <i class="fas fa-birthday-cake"></i>
                  商品一覧
                <% end %>
              </li>

              <li>
                <%= link_to admin_customers_path, class:'nav-link text-dark' do %>
                 <i class="fas fa-users"></i>
                 会員一覧
                <% end %>
              </li>

              <li>
                <%= link_to admin_root_path, class:'nav-link text-dark' do %>
                 <i class="fas fa-cart-arrow-down"></i>
                 注文履歴一覧
                <% end %>
              </li>

              <li>
                <%= link_to admin_genres_path, class:'nav-link text-dark' do %>
                 <i class="fas fa-cookie"></i>
                 ジャンル一覧
                <% end %>
              </li>

              <li>
                <%= link_to destroy_admin_session_path, class:'nav-link text-dark', method: :delete do %>
                 <i class="fas fa-sign-out-alt"></i>
                 ログアウト
                <% end %>
              </li>

              <% elsif customer_signed_in? %>
              <ul>ようこそ<%= current_customer.first_name %>
              <%= current_customer.last_name %>!!</ul>
              <li>
                <%= link_to public_customers_my_page_path,class:'nav-link text-dark' do %>
                マイページ
                <% end %>
              </li>

              <li>
                <%= link_to public_items_path, class:'nav-link text-dark' do %>
                <i class="fas fa-birthday-cake"></i>
                商品一覧
                <% end %>
              </li>

              <li>
                <%= link_to public_cart_items_path, class:'nav-link text-dark' do %>
                <i class="fas fa-sign-in-alt"></i>
                カート
                <% end %>
              </li>

              <li>
                <%= link_to destroy_customer_session_path, class:'nav-link text-dark', method: :delete do %>
                <i class="fas fa-sign-in-alt"></i>
                ログアウト
                <% end %>
              </li>

              <% else %>
              <li>
                <%= link_to about_path, class:'nav-link text-dark' do %>
                  About
                <% end %>
              </li>

              <li>
                <%= link_to public_items_path, class:'nav-link text-dark' do %>
                 <i class="fas fa-birthday-cake"></i>
                 商品一覧
                <% end %>
              </li>
              <li>
               <%= link_to new_customer_registration_path, class:'nav-link text-dark' do  %>
                <i class="fas fa-user-plus"></i>
                新規登録
               <% end %>
              </li>
              <li>
               <%= link_to new_customer_session_path, class:'nav-link text-dark' do  %>
               <i class="fas fa-sign-in-alt"></i>
                ログイン
               <% end %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>

    </header>

    <main>
    <p class="notice"><%= notice %></p>

    <%= yield %>
    </main>

    <footer>
      <div class="container mt-5 bg-warning">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight NaganoCake.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
